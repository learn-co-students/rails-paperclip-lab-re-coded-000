<%= form_for @song , html:{multipart: true}  do |f|  %>
  <% if @song.errors.any? %>
  <div id="error_explanation">
    <div class="errors-alert ">
      The form contains <%= pluralize(@song.errors.count, "error") %>.
    </div>
    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li class="errors-alert-item"><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :album_cover %>
  <%= f.file_field :album_cover %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <br />

  <%= f.submit %>
<% end %>
